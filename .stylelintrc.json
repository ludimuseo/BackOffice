{
  "extends": "stylelint-config-recommended-scss",
  "plugins": ["stylelint-scss"],
  "overrides": [
    {
      "files": ["*.scss"],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "include", "tailwind", "use", "mixins"]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["include", "tailwind", "use", "mixins"]
      }
    ],
    "block-no-empty": null,
    "unit-allowed-list": ["rem", "ms"]
  }
}
