{
  "extends": "stylelint-config-recommended-scss",
  "plugins": ["stylelint-scss"],
  "overrides": [
    {
      "files": ["*.scss"],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "include",
          "tailwind",
          "use",
          "mixin",
          "function",
          "if",
          "return"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["include", "tailwind", "use", "mixin"]
      }
    ],
    "block-no-empty": null,
    "unit-allowed-list": ["rem", "ms", "px", "%"]
  }
}
